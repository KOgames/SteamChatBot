<Window x:Class="SteamChatBot.Triggers.TriggerOptions.Windows.ChatCommandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamChatBot.Triggers.TriggerOptions.Windows"
        mc:Ignorable="d"
        Title="Options" Height="300.898" Width="381.737" Icon="/SteamChatBot;component/scb.ico" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="delayLabel" Content="Delay (ms):" HorizontalAlignment="Left" Margin="28,50,0,0" VerticalAlignment="Top" Visibility="Visible" Height="28" Width="70"/>
        <TextBox x:Name="delayBox" HorizontalAlignment="Left" Height="22" Margin="103,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Visibility="Visible" TabIndex="1"/>
