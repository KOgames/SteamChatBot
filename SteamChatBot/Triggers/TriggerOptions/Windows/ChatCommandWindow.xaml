        <Label x:Name="probLabel" Content="Probability (%):" HorizontalAlignment="Left" Margin="7,119,0,0" VerticalAlignment="Top" Visibility="Visible" Height="27" Width="93"/>
        <TextBox x:Name="probBox" HorizontalAlignment="Left" Height="22" Margin="103,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Visibility="Visible" TabIndex="3"/>
        <Label x:Name="roomsLabel" Content="Rooms:" HorizontalAlignment="Left" Margin="48,163,0,0" VerticalAlignment="Top" Visibility="Visible" Height="29" Width="50"/>
        <TextBox x:Name="roomsBox" HorizontalAlignment="Left" Height="22" Margin="103,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Visibility="Visible" TabIndex="4"/>
        <Label x:Name="usersLabel" Content="Users:" HorizontalAlignment="Left" Margin="56,193,0,0" VerticalAlignment="Top" Visibility="Visible" Height="27" Width="42"/>
        <TextBox x:Name="usersBox" HorizontalAlignment="Left" Height="22" Margin="103,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Visibility="Visible" TabIndex="5"/>
        <Label x:Name="ignoresLabel" Content="Ignores:" HorizontalAlignment="Left" Margin="44,222,0,0" VerticalAlignment="Top" Visibility="Visible" Height="30" Width="54"/>
        <TextBox x:Name="ignoresBox" HorizontalAlignment="Left" Height="22" Margin="103,226,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Visibility="Visible" TabIndex="6"/>
        <Button x:Name="button" Content="Done" HorizontalAlignment="Left" Margin="234,103,0,0" VerticalAlignment="Top" Width="112" Height="58" Click="button_Click" TabIndex="8"/>
        <Label x:Name="label" Content="* Name:" HorizontalAlignment="Left" Margin="203,19,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="nameBox" HorizontalAlignment="Left" Height="22" Margin="261,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" TabIndex="7"/>
        <Label x:Name="commandLabel" Content="* Command:" HorizontalAlignment="Left" Margin="24,7,0,0" VerticalAlignment="Top" Visibility="Visible" Height="28" Width="74"/>
        <TextBox x:Name="commandBox" HorizontalAlignment="Left" Height="22" Margin="103,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Visibility="Visible" TabIndex="0"/>

    </Grid>
</Window>
